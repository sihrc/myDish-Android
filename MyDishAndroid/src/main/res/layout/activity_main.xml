<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:id = "@+id/myDishIcon"
        android:layout_height = "50dp"
        android:layout_width = "50dp"
        android:background = "@drawable/ic_launcher"
        />
    <TextView
        android:id = "@+id/welcome_message"
        android:layout_toRightOf="@id/myDishIcon"
        android:layout_width ="match_parent"
        android:layout_height = "wrap_content"
        android:text = "Hi! I'm your MyDish!\nHow may I help you today? Tap me!"
        android:padding = "5dp"
        android:textSize = "16sp"
        android:textColor = "#898989"
        android:layout_marginLeft="10dp"
        android:clickable = "true"
        />
    <RelativeLayout
        android:id="@+id/searchBox"
        android:layout_width = "wrap_content"
        android:layout_height = "46dp"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop = "true"
        android:background = "#000000">
        <AutoCompleteTextView
            android:background="#ffffff"
            android:id="@+id/search_input"
            android:layout_margin="2dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:layout_width = "wrap_content"
            android:layout_height = "44dp"
            android:hint = "Search for specific categories!"
            />
        <Button
            android:id="@+id/search_go"
            android:text="Go"
            android:layout_toRightOf = "@id/search_input"
            android:layout_height = "44dp"
            android:layout_width = "50dp"
            android:layout_marginTop = "2dp"
            android:layout_marginRight = "2dp"
            android:layout_marginBottom = "2dp"
            android:background="#ffffff"
            />
        <Button
            android:id="@+id/search_cancel"
            android:text="X"
            android:layout_toRightOf = "@id/search_go"
            android:layout_height = "44dp"
            android:layout_width = "50dp"
            android:layout_marginTop = "2dp"
            android:layout_marginRight = "2dp"
            android:layout_marginBottom = "2dp"
            android:background="#ffffff"
            />
    </RelativeLayout>
    <View
        android:id="@+id/divider"
        android:layout_height = "1dp"
        android:layout_width = "match_parent"
        android:background = "#d9d9d9"
        android:layout_below = "@id/welcome_message"
        />
    <ListView
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_below="@id/divider"
        android:id="@+id/entries"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:divider = "@android:color/transparent"
        android:dividerHeight="15dp"
        />



</RelativeLayout>
